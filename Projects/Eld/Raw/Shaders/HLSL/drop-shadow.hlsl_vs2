#include "common.hlsl_vsh"

struct VS_INPUT 
{
	float4 Position	: POSITION;
	float2 UV		: TEXCOORD0;
};

struct VS_OUTPUT
{
	float4 Position		: POSITION;
	float2 UV			: TEXCOORD0;
	float3 PositionWS	: TEXCOORD1;
};

VS_OUTPUT Main( VS_INPUT In )
{
	VS_OUTPUT Out;

	Out.Position	= mul( In.Position, WVP );
	Out.PositionWS	= mul( In.Position, WorldMatrix );
	Out.UV			= In.UV;

	return Out;
}